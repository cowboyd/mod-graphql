#%RAML 0.8

title: simple API  

schemas:
  - fooSchema: |
      {
        "type": "object",
        "$schema": "http://json-schema.org/draft-03/schema",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "title"
        ]
      }

/foo:
  get:
    queryParameters:
      name:
      bar: {type: number}
      baz: {type: string}
    responses:
      200:
        body:
          application/json:
            schema: fooSchema
