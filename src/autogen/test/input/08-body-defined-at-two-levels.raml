#%RAML 0.8

title: simple API  

schemas:
  - personSchema: !include schemas/foo.json
  - groupSchema: !include schemas/bar.json

/person:
  get:
    queryParameters:
      name:
      maxCount: {type: number}
      queryString: {type: string}
    body:
      application/json:
        schema: personSchema
    responses:
      200:
        body:
          application/json:
            schema: groupSchema
