#%RAML 0.8

title: Body defined for whole GET method as well as 200 response

schemas:
  - personSchema: !include schemas/person.json
  - groupSchema: !include schemas/group.json

/person:
  get:
    queryParameters:
      name:
      maxCount: {type: number}
      queryString: {type: string}
    body:
      application/json:
        schema: personSchema
    responses:
      200:
        body:
          application/json:
            schema: groupSchema
