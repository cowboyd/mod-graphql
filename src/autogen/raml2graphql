#!/usr/bin/env node

/* eslint-disable no-console */
// Run as: ./raml2graphql ../../../mod-inventory-storage/ramls/instance-storage.raml
//     or: ./raml2graphql ../../../mod-inventory/ramls/inventory.raml
// For the time being, you will need mod-inventory-storage to be on the "graphql" branch.

const Logger = require('@folio/stripes-logger');
const packageInfo = require('../../package.json');
const { convertAPI } = require('./convertAPI');

const argv0 = process.argv[1].replace(/.*\//, '');
const opt = require('node-getopt').create([
  ['V', 'version', 'Show version and exit'],
  ['h', 'help', 'Display this help'],
])
  .setHelp(`Usage: node ${argv0} [OPTIONS] <RAMLfile>\n[[OPTIONS]]`)
  .bindHelp()
  .parseSystem();

if (opt.options.version) {
  console.log(`${argv0} version ${packageInfo.version}`);
  process.exit(0);
}

if (opt.argv.length !== 1) {
  console.info(opt.getHelp());
  process.exit(1);
}

const logger = new Logger(process.env.LOGGING_CATEGORIES);
const { schema } = convertAPI(opt.argv[0], () => null, Object.assign({}, opt.options, { logger }));
console.log(schema);
