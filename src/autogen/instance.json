{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "@context": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "instanceTypeId": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "identifiers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "identifierTypeId": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "identifierTypeId",
          "value"
        ]
      }
    },
    "contributors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "contributorNameTypeId": {
            "type": "string"
          },
          "contributorTypeId": {
            "type": "string"
          },
          "contributorTypeText": {
            "type": "string"
          },
          "primary": {
            "type": "boolean"
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "contributorNameTypeId"
        ]
      }
    },
    "links": {
      "type": "object",
      "properties": {
        "self": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "self"
      ]
    },
    "holdingsRecords": {
      "$ref" : "holdings.schema",
      "folio:isVirtual": true,
      "folio:linkBase": "holdings-storage/holdings",
      "folio:linkFromField": "id",
      "folio:linkToField": "instanceId",
      "folio:includedElement": "holdingsRecords"
    }
  },
  "additionalProperties": false,
  "required": [
    "title",
    "source",
    "instanceTypeId"
  ]
}
